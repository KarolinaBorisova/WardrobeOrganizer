@model SearchIndexViewModel

@{
    ViewData["Title"] = $"Hello from Search";
}
<div class="text-center">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>
<div class="list-title">Search by category</div>
<partial name="_SearchByCategoryNavigation">
<div>
    <div class="list-title">Search by color</div>
        <form method="get" asp-action="AllItemsFromColor" class="search-container">
    @foreach (var item in Model.Colors)
    {
        <div class="form-check">
            <input id="@item" class="form-check-input" type="checkbox" value="@item" name="Colors" />
            <label class="form-check-label" for="@item">@item</label>
        </div>
    }
        <button class="btn btn-primary">Search</button>
        </form>
</div>

