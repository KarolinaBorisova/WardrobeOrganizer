<div class="card-group">

    @foreach (var item in Model.Shoes)
    {
        <div class="card">
            <div class="card-body">
                <img src="@item.ImgUrl" alt="Avatar" style="width:50%">
                <h4><a class="card-title text-dark" asp-controller="Shoes" asp-route-shoesId="@item.Id" asp-action="Details">@item.Name</a></h4>
                <p class="card-text">Shoe Size: @item.SizeEu</p>
            </div>
        </div>
    }
</div>

