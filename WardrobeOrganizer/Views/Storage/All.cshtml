@model IEnumerable<AllStoragesViewModel>
@{
    ViewData["Title"] = "All Storages";
}
<div class="text-center">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>
@if (Model.Count() == 0)
{
    <p class="lead">
        There are no storages in the system.
    </p>
    <h5>
        <a class="list-group-item list-group-item-action list-group-item-info btn" asp-controller="Storage" asp-action="Add"> Add new storage</a>
    </h5>
}
@foreach (var storage in Model)
{
    <div class="card text-center" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@storage.Name</h5>
            <a class="btn btn-primary" asp-controller="Storage" asp-action="Content"
           asp-route-id="@storage.Id">Go to @storage.Name</a>
        </div>
    </div>
}