            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.Id" asp-route-category="Vests" asp-action="MemberOuterwearByCategory">Vests</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.Id" asp-route-category="Coats" asp-action="MemberOuterwearByCategory">Coats</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.Id" asp-route-category="Snowsuits" asp-action="MemberOuterwearByCategory">Snowsuits</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.Id" asp-route-category="WinterTrousers" asp-action="MemberOuterwearByCategory">WinterTrousers</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.Id" asp-route-category="RainTrousers" asp-action="MemberOuterwearByCategory">RainTrousers</a>
        </div>
    </div>
    <div class="dropdown">
        <a class="dropbtn" asp-controller="Shoes" asp-route-memberId="@Model.Id" asp-action="MemberAllShoes">Shoes</a>
        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="Shoes" asp-route-memberId="@Model.Id" asp-route-category="Boots" asp-action="MemberShoesByCategory">Boots</a>
            <a class="btn btn-info" asp-controller="Shoes" asp-route-memberId="@Model.Id" asp-route-category="Trainers" asp-action="MemberShoesByCategory">Trainers</a>
            <a class="btn btn-info" asp-controller="Shoes" asp-route-memberId="@Model.Id" asp-route-category="Sandals" asp-action="MemberShoesByCategory">Sandals</a>
            <a class="btn btn-info" asp-controller="Shoes" asp-route-memberId="@Model.Id" asp-route-category="RainBoots" asp-action="MemberShoesByCategory">RainBoots</a>
        </div>
    </div>
    <div class="dropdown">
        <a class="dropbtn" asp-controller="Accessories" asp-route-memberId="@Model.Id" asp-action="MemberAllAccessories">Accessories</a>
        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.Id" asp-route-category="Hats" asp-action="MemberAccessoriesByCategory">Hats</a>
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.Id" asp-route-category="Gloves" asp-action="MemberAccessoriesByCategory">Gloves</a>
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.Id" asp-route-category="Scarves" asp-action="MemberAccessoriesByCategory">Scarves</a>
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.Id" asp-route-category="Hair accessories" asp-action="MemberAccessoriesByCategory">Hair accessories</a>
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.Id" asp-route-category="Sunglasses" asp-action="MemberAccessoriesByCategory">Sunglasses</a>
        </div>
    </div>
</div>

<div>
    <div class="card">
        <div class="card-body-profile">
            <img src="@Model.ImagePath" alt="Avatar">
            <h4>@Model.FirstName @Model.LastName</h4>
            <p class="card-text">Birthdate: @Model.Birthdate</p>
            <p class="card-text">Gender: @Model.Gender</p>
            <p class="card-text">Height: @Model.UserHeight</p>
            <p class="card-text">Clothes size: @Model.ClothesSize</p>
            <p class="card-text">Shoes size: @Model.ShoeSizeEu</p>
            <p class="card-text">Foot length in cm: @Model.FootLengthCm</p>

        </div>
        @if (User.IsInRole(RoleConstants.User))
        {
        <div class="card-footer">
            <form method="post" asp-controller="Member" asp-action="Delete" asp-route-id="@Model.Id">
                <button class="btn btn-danger" type="submit">Delete member</button>
            </form>
            <a class="btn btn-success" asp-controller="Member" asp-route-id="@Model.Id" asp-action="Edit">Edit member</a>
        </div>
        }
    </div>
</div>
