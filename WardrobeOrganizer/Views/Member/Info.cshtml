@model InfoMemberViewModel
@{
    ViewData["Title"] = "Member Info";
}

<div class="text-center">
    <h1 class="display-4">@Model.FirstName @Model.LastName</h1>
</div>
<div>
    <div class="card">
        <div class="card-body">
            <img src="@Model.ImgUrl" alt="Avatar" style="width:100%">
            <h4>@Model.FirstName @Model.LastName</h4>
            <p class="card-text">Birthdate: @Model.Birthdate</p>
            <p class="card-text">Gender: @Model.Gender</p>
            <p class="card-text">Height: @Model.UserHeight</p>
            <p class="card-text">Clothes size: @Model.ClothesSize</p>
            <p class="card-text">Shoes size: @Model.ShoeSizeEu</p>
            <p class="card-text">Foot length in cm: @Model.FootLengthCm</p>
    
        </div>
        <div class="card-footer">
            <form method="post" asp-controller="Member" asp-action="Delete" asp-route-id="@Model.Id">
                <button class="btn btn-danger" type="submit">Delete member</button>
            </form>
            <a class="btn btn-danger" asp-controller="Member" asp-route-id="@Model.Id" asp-action="Edit">Edit member</a>
        </div>
    </div>
</div>




