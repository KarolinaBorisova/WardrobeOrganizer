@model AddClothesViewModel
@{
    ViewData["Title"] = "Add Clothes";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="label" asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" id="Name" placeholder="Name">
        </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="Url">Image URL</label>
            <input asp-for="Url" class="form-control" id="Url" placeholder="Image URL">
        </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="Color">Color</label>
            <input asp-for="Color" class="form-control" id="Color" placeholder="Color">
        </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="Size">Size</label>
            <input asp-for="Size" class="form-control" id="ImgUSizerl" placeholder="Size">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="label" asp-for="SizeHeight">Size Height</label>
            <input asp-for="SizeHeight" type="text" class="form-control" id="Size Height">
        </div>
       <div class="form-row col-md-6">
            <label class="label" asp-for="Category">Category</label>
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<CategoryClothing>()">
            <option selected="selected" value="">Please select</option>
        </select>     
    </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="SizeHeight">Storage*</label>
            <input asp-for="SizeHeight" type="text" class="form-control" id="Size Height">
        </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="SizeHeight">Member*</label>
            <input asp-for="SizeHeight" type="text" class="form-control" id="Size Height">
        </div>
    </div>
    <div class="form-group col-md-6">
        <label class="label" asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" id="Description" placeholder="Description">
    </div>
    <button type="submit" class="btn btn-primary">Add clothing</button>
</form>