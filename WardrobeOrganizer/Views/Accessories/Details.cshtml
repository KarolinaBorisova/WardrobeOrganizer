@model DetailsAccessoriesViewModel
@{
    ViewBag.Title = $"{Model.Name} details";
}

<div class="text-center">
    <h1 class="display-4">@Model.Name details:</h1>
    <a class="btn btn-info" asp-controller="Storage" asp-route-id="@Model.StorageId" asp-action="Info">Back to storage</a>
    <a class="btn btn-info" asp-controller="Accessories" asp-route-storageId="@Model.StorageId" asp-action="All">Back to all Accessories</a>
    <a class="btn btn-info" asp-controller="Accessories" asp-route-storageId="@Model.StorageId" asp-route-category="@Model.Category" asp-action="AccessoriesByCategory">Back to all @Model.Category</a>
</div>
<div>
    <div class="card">
        <div class="card-body">
            <img src="@Model.ImgUrl" alt="Avatar" style="width:100%">
            <h4>@Model.Name</h4>
            <p class="card-text">Category: @Model.Category</p>
            <p class="card-text">Size: @Model.SizeAge</p>
            <p class="card-text">Color: @Model.Color</p>
            <p class="card-text">Description: @Model.Description</p>
            <p class="card-text">Member: @Model.MemberName</p>
            <p class="card-text">House: @Model.HouseName</p>
            <a class="card-text" asp-controller="Clothes" asp-route-storageId="@Model.StorageId" asp-action="All">Storage: @Model.StorageName</a>
            <input type="hidden" asp-for="@Model.StorageId">
        </div>
         @if (User.IsInRole(RoleConstants.User))
        {
            <div class="card-footer">
                <form method="post" asp-controller="Accessories" asp-action="Delete" asp-route-accessoriesId="@Model.Id">
                    <button class="btn btn-danger" type="submit">Delete @Model.Name</button>
                </form>
                <a class="btn btn-info" asp-controller="Accessories" asp-route-accessoriesId="@Model.Id" asp-action="Edit">Edit @Model.Name</a>
            </div>       
        }
    </div>
</div>
