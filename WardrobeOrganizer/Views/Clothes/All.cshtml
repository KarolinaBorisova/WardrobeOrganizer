            <a class="btn btn-info" asp-controller="Cardigan" asp-action="All">Cardigans</a>
            <a class="btn btn-info" asp-controller="Jean" asp-action="All">Jeans</a>    
            <a class="btn btn-info" asp-controller="Legging" asp-action="All">Leggings</a>
            <a class="btn btn-info" asp-controller="Trouser" asp-action="All">Trousers</a>
            <a class="btn btn-info" asp-controller="Shorts" asp-action="All">Shorts</a>
