@model IEnumerable<AllStoragesViewModel>
@{
    ViewData["Title"] = "All Storages";
}
<div class="text-center">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>
@if (Model.Count() == 0)
{
    <p class="lead">
        There are no storages in the system.
    </p>
    <h5>
        <a class="list-group-item list-group-item-action list-group-item-info btn" asp-controller="Storage" asp-action="Add"> Add new storage</a>
    </h5>
}
@foreach (var storage in Model)
{
    <div class="card text-center" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@storage.Name</h5>
            <a class="btn btn-primary" asp-controller="Storage" asp-action="Content"
           asp-route-id="@storage.Id">Go to @storage.Name</a>
        </div>
    </div>
}
<div class="main-container">
    <div class="list-group one">
        <a class="list-group-item list-group-item-action list-group-item-info btn" asp-controller="Storage" asp-action="Add">Add new storage</a>
        <div class="list-group one">
            <img class="house-background" src="https://images.pexels.com/photos/259588/pexels-photo-259588.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Smiley face">
            <div class="card-group">
                @foreach (var storage in Model)
                {
                    <div class="card">
                        <div class="card-body">
                            <a class="list-group-item list-group-item-action list-group-item-warning" asp-controller="Storage" asp-route-id="@storage.Id" asp-action="Content">
                                @storage.Name
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>