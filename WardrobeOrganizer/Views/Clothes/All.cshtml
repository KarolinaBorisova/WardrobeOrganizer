        <button class="dropbtn">Shoes</button>
        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="Boots" asp-action="All">Boots</a>
            <a class="btn btn-info" asp-controller="Trainers" asp-action="All">Trainers</a>
