@model IEnumerable<WardrobeOrganizer.Core.Models.Accessories.AccessoriesViewModel>

<div class="container card-img">

    @foreach (var item in Model)
    {
        <div class="card-wrapper">
            <a class="card-title text-dark" asp-controller="Accessories" asp-route-accessoriesId="@item.Id" asp-action="Details">
            <div class="card-body">
                <img src="@item.ImgUrl" alt="Avatar" style="width:50%">
                <h4>@item.Name</h4>
                <p class="card-text">Size: @item.SizeAge age</p>
            </div>
            </a>
        </div>
    }
</div>