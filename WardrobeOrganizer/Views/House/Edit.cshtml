@model InfoHouseViewModel
@{
    ViewData["Title"] = "Edit House";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<form method="post">
    <input type="hidden" asp-for="@Model.FamilyId" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="label" asp-for="Name">House name</label>
            <input asp-for="Name" class="form-control" id="Name">
        </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" id="Address">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Edit house</button>
</form>