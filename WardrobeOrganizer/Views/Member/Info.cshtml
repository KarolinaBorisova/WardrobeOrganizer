@model InfoMemberViewModel
@{
    ViewData["Title"] = "Member Info";
}

<div class="text-center">
    <h1 class="page-title">@Model.FirstName @Model.LastName</h1>
</div>
<div class="nav-container">
    <div class="dropdown">
        <a class="dropbtn" asp-controller="Clothes" asp-route-memberId="@Model.Id" asp-action="MemberAllClothes">Clothes</a>
