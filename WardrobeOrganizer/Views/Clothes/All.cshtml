        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="Hat" asp-action="All">Hats</a>
            <a class="btn btn-info" asp-controller="Glove" asp-action="All">Gloves</a>
            <a class="btn btn-info" asp-controller="Scarve" asp-action="All">Scarves</a>
            <a class="btn btn-info" asp-controller="Accessories" asp-action="All">Hair accessories</a>
            <a class="btn btn-info" asp-controller="Sunglasses" asp-action="All">Sunglasses</a>
        </div>
    </div>
</div>


<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<div class="text-center">
    <a class="btn btn-primary" asp-controller="Storage" asp-route-storageId="@Model.StorageId" asp-action="AddItem">Add new clothes</a>
</div>
<div class="card-group">

    @foreach (var item in Model.Clothes)
    {
        <div class="card">
            <div class="card-body">
                <img src="@item.ImgUrl" alt="Avatar" style="width:50%">
                <h4><a class="card-title text-dark" asp-controller="Item" asp-route-houseId="@item.Id" asp-action="Info">@item.Name</a></h4>
                <p class="card-text">Size: @item.Size</p>
            </div>
        </div>
    }
</div>

