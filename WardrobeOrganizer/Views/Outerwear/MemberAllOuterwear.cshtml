@model AllMemberOuterwearViewModel
@{
    ViewData["Title"] = "All Member Outerwear";
}

<div class="nav-container">
    <div class="dropdown">
        <a class="dropbtn" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-action="MemberAllClothes">Clothes</a>
        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Tshirts" asp-action="MemberClothesByCategory">Tshirts</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Longsleeves" asp-action="MemberClothesByCategory">Longsleeves</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Blouses" asp-action="MemberClothesByCategory">Blouses</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Sweatshirts" asp-action="MemberClothesByCategory">Sweatshirts</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Cardigans" asp-action="MemberClothesByCategory">Cardigans</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Jeans" asp-action="MemberClothesByCategory">Jeans</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Leggings" asp-action="MemberClothesByCategory">Leggings</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Trousers" asp-action="MemberClothesByCategory">Trousers</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Shorts" asp-action="MemberClothesByCategory">Shorts</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Sets" asp-action="MemberClothesByCategory">Sets</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.MemberId" asp-route-category="Dresses" asp-action="MemberClothesByCategory">Dresses</a>
        </div>
    </div>
    <div class="dropdown">
        <a class="dropbtn" asp-controller="Outerwear" asp-route-memberId="@Model.MemberId" asp-action="MemberAllOuterwear">Outerwear</a>
        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.MemberId" asp-route-category="WinterJackets" asp-action="MemberOuterwearByCategory">WinterJackets</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.MemberId" asp-route-category="RainJackets" asp-action="MemberOuterwearByCategory">RainJackets</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.MemberId" asp-route-category="Jackets" asp-action="MemberOuterwearByCategory">Jackets</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.MemberId" asp-route-category="Vests" asp-action="MemberOuterwearByCategory">Vests</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.MemberId" asp-route-category="Coats" asp-action="MemberOuterwearByCategory">Coats</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.MemberId" asp-route-category="Snowsuits" asp-action="MemberOuterwearByCategory">Snowsuits</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.MemberId" asp-route-category="WinterTrousers" asp-action="MemberOuterwearByCategory">WinterTrousers</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.MemberId" asp-route-category="RainTrousers" asp-action="MemberOuterwearByCategory">RainTrousers</a>
        </div>
    </div>
    <div class="dropdown">
        <a class="dropbtn" asp-controller="Shoes" asp-route-memberId="@Model.MemberId" asp-action="MemberAllShoes">Shoes</a>
        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="Shoes" asp-route-memberId="@Model.MemberId" asp-route-category="Boots" asp-action="MemberShoesByCategory">Boots</a>
            <a class="btn btn-info" asp-controller="Shoes" asp-route-memberId="@Model.MemberId" asp-route-category="Trainers" asp-action="MemberShoesByCategory">Trainers</a>
            <a class="btn btn-info" asp-controller="Shoes" asp-route-memberId="@Model.MemberId" asp-route-category="Sandals" asp-action="MemberShoesByCategory">Sandals</a>
            <a class="btn btn-info" asp-controller="Shoes" asp-route-memberId="@Model.MemberId" asp-route-category="RainBoots" asp-action="MemberShoesByCategory">RainBoots</a>
        </div>
    </div>
    <div class="dropdown">
        <a class="dropbtn" asp-controller="Accessories" asp-route-memberId="@Model.MemberId" asp-action="MemberAllAccessories">Accessories</a>
        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.MemberId" asp-route-category="Hats" asp-action="MemberAccessoriesByCategory">Hats</a>
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.MemberId" asp-route-category="Gloves" asp-action="MemberAccessoriesByCategory">Gloves</a>
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.MemberId" asp-route-category="Scarves" asp-action="MemberAccessoriesByCategory">Scarves</a>
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.MemberId" asp-route-category="Hair accessories" asp-action="MemberAccessoriesByCategory">Hair accessories</a>
            <a class="btn btn-info" asp-controller="Accessories" asp-route-memberId="@Model.MemberId" asp-route-category="Sunglasses" asp-action="MemberAccessoriesByCategory">Sunglasses</a>
        </div>
    </div>
</div>
<h2 class="text-center">@ViewData["Title"]</h2>
    @foreach (var item in Model.Outerwear)
    {
        <div class="card">
            <div class="card-body">
                <img src="@item.ImgUrl" alt="Avatar" style="width:50%">
                <h4><a class="card-title text-dark" asp-controller="Outerwear" asp-route-outerwearId="@item.Id" asp-action="Details">@item.Name</a></h4>
                <p class="card-text">Size: @item.Size</p>
            </div>  
        </div>
    }
</div>

