@model AddShoesViewModel
@{
    ViewData["Title"] = "Add Shoes";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="label" asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" id="Name" placeholder="Name">
        </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="ImgUrl">Image URL</label>
            <input asp-for="ImgUrl" class="form-control" id="Url" placeholder="Image URL">
        </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="Color">Color</label>
            <input asp-for="Color" class="form-control" id="Color" placeholder="Color">
        </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="SizeEu">SizeEu</label>
            <input asp-for="SizeEu" class="form-control" id="SizeEu" placeholder="SizeEu">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="label" asp-for="Centimetres">Centimetres</label>
            <input asp-for="Centimetres" type="text" class="form-control" id="Centimetres">
        </div>
        <input type="hidden" asp-for="Category" value="@Model.Category"/>
       
    @*    <div class="form-group col-md-6">
            <label class="label" asp-for="Members">Member</label>
            <select asp-for="Members" asp-items="@Model.Members">
            <option selected="selected" value="">Please select</option>
        </div>*@
    </div>
    <div class="form-group col-md-6">
        <label class="label" asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" id="Description" placeholder="Description">
    </div>
    <button type="submit" class="btn btn-primary">Add shoes</button>
</form>
