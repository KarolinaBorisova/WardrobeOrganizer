            <a class="btn btn-info" asp-controller="Search" asp-route-storageId="" asp-route-category="Sweatshirts" asp-action="ClothesByCategory">Sweatshirts</a>
            <a class="btn btn-info" asp-controller="Search" asp-route-storageId="" asp-route-category="Cardigans" asp-action="ClothesByCategory">Cardigans</a>
            <a class="btn btn-info" asp-controller="Search" asp-route-storageId="" asp-route-category="Jeans" asp-action="ClothesByCategory">Jeans</a>
            <a class="btn btn-info" asp-controller="Search" asp-route-storageId="" asp-route-category="Leggings" asp-action="ClothesByCategory">Leggings</a>
            <a class="btn btn-info" asp-controller="Search" asp-route-storageId="" asp-route-category="Trousers" asp-action="ClothesByCategory">Trousers</a>
