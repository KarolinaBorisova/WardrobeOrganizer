@model AddHouseViewModel
@{
    ViewData["Title"] = "Add House";
}
<div class="text-center">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="label" asp-for="Name">House name</label>
            <input asp-for="Name" class="form-control" id="Name">
        </div>
        <div class="form-group col-md-6">
            <label class="label" asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" id="Address">
        </div>
    </div>
    <button type="submit" class="list-group-item list-group-item-action list-group-item-info btn">Add house</button>
</form>