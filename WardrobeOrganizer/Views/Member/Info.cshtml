            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.Id" asp-route-category="Shorts" asp-action="MemberClothesByCategory">Shorts</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.Id" asp-route-category="Sets" asp-action="MemberClothesByCategory">Sets</a>
            <a class="btn btn-info" asp-controller="Clothes" asp-route-memberId="@Model.Id" asp-route-category="Dresses" asp-action="MemberClothesByCategory">Dresses</a>
        </div>
    </div>
    <div class="dropdown">
        <a class="dropbtn" asp-controller="Outerwear" asp-route-memberId="@Model.Id" asp-action="MemberAllOuterwear">Outerwear</a>
        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.Id" asp-route-category="WinterJackets" asp-action="MemberOuterwearByCategory">WinterJackets</a>
            <a class="btn btn-info" asp-controller="Outerwear" asp-route-memberId="@Model.Id" asp-route-category="RainJackets" asp-action="MemberOuterwearByCategory">RainJackets</a>
