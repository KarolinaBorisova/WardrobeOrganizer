@model IEnumerable<AllHousesViewModel>
   
@{
    ViewData["Title"] = "All Houses";
}

<div class="text-center">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>
<div class="main-container">
    <div class="list-group one">
            <a class="list-group-item list-group-item-action list-group-item-info btn" asp-controller="House" asp-action="Add">Add new house</a>
        <div class="list-group one">
            <img class="house-background" src="https://images.pexels.com/photos/259588/pexels-photo-259588.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Smiley face">
                <div class="card-group">
                    @foreach (var house in Model)
                    {
                        <div class="card">
                            <div class="card-body">
                                <a class="list-group-item list-group-item-action list-group-item-warning" asp-controller="House" asp-route-houseId="@house.Id" asp-action="Info">
                                    @house.Name
                                    <p class="list-gruop-item-info">Address: @house.Address</p>
                                </a>
                            </div>
                        </div>
                    }
                </div>   
        </div>
    </div>
</div>
