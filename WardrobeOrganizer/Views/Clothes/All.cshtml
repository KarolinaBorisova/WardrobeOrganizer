    <div class="dropdown">
        <button class="dropbtn">Outerwear</button>
        <div class="dropdown-content">
            <a class="btn btn-info" asp-controller="WinterJacket" asp-action="All">WinterJacket</a>
            <a class="btn btn-info" asp-controller="RainJacket" asp-action="All">RainJacket</a>
            <a class="btn btn-info" asp-controller="Jacket" asp-action="All">Jacket</a>
            <a class="btn btn-info" asp-controller="Vest" asp-action="All">Vest</a>
            <a class="btn btn-info" asp-controller="Coat" asp-action="All">Coat</a>
            <a class="btn btn-info" asp-controller="Snowsuit" asp-action="All">Snowsuit</a>
            <a class="btn btn-info" asp-controller="WinterTrousers" asp-action="All">WinterTrousers</a>
            <a class="btn btn-info" asp-controller="RainTrousers" asp-action="All">RainTrousers</a>
        </div>
    </div>
