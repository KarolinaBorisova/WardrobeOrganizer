@if (User.IsInRole(RoleConstants.User))
{
    <div class="card-footer">
        <form method="post" asp-controller="Storage" asp-action="Delete" asp-route-id="@Model.Id">
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
        <a class="btn btn-success" asp-controller="Storage" asp-route-id="@Model.Id" asp-action="Edit">Edit</a>
        <a class="btn btn-info add" asp-controller="Storage" asp-route-storageId="@Model.Id" asp-action="AddItem">Add Item</a>
    </div>
}
